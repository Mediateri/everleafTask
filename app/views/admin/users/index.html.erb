<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Tasks</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.tasks.count %></td>
        <% if current_user.role %>
        <td><%= link_to 'Show', admin_user_path(user), class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), class: "btn btn-link", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New User', new_admin_user_path, class: "btn btn-primary" %>
