<p id="notice"><%= notice %></p>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Labeler</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.labeler %></td>
        <td><%= link_to 'Show', label, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_label_path(label), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', label, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Label', new_label_path, class: "btn btn-primary" %>
